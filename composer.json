{
    "name": "sanmai/sdk-common",
    "description": "Common types and contracts for PHP API SDKs",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Alexey Kopytko",
            "email": "alexey@kopytko.com",
            "homepage": "https://www.alexeykopytko.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "doctrine/collections": "^2.3",
        "guzzlehttp/guzzle": "^6.5.8 || ^7.9.3",
        "psr/http-message": "^2.0",
        "sanmai/json-serializer": "^0.2.7",
        "sanmai/pipeline": "^6.14 || ^7.0"
    },
    "require-dev": {
        "colinodell/psr-testlogger": "^1.3",
        "ergebnis/composer-normalize": "^2.47",
        "friendsofphp/php-cs-fixer": "^3.75",
        "infection/infection": "^0.29.14 || ^0.31.0",
        "phan/phan": "^5.4.5",
        "php-coveralls/php-coveralls": "^2.8.0",
        "phpstan/phpstan": "^1.12.27 || ^2.0.0",
        "phpunit/phpunit": "^9.6.23",
        "psr/log": "^2 || ^3",
        "symfony/http-foundation": "^5.4.49 || ^6.4.21 || ^7.2.6",
        "vimeo/psalm": "^6.7.0"
    },
    "autoload": {
        "psr-4": {
            "CommonSDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CommonSDK\\Tests\\Common\\": "tests/Common/",
            "Tests\\CommonSDK\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.5.x-dev"
        }
    }
}
